<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flappy_bird.MainPage"
             Shell.NavBarIsVisible="false">

    <Grid>
    
    <Image  Source="fundo.png"
            Aspect="AspectFill"
            HorizontalOptions="Fill"
            VerticalOptions="Fill"/>


    <Image Source="passaro.png"
    x:Name="passaro"
    Margin="10"
    HeightRequest="50"
    WidthRequest="50"
    HorizontalOptions="Start"/>


    <Image Source ="cano.png"
    x:Name="imgCanocima"
    HeightRequest="300"
    HorizontalOptions="End"
    VerticalOptions="Start"/>


    <Image Source="canobaixo.png"
    x:Name="imgCanobaixo"
     HeightRequest="300"
    HorizontalOptions="End"
    VerticalOptions="End"/>

    <Image Source="chao.png"
    HorizontalOptions="Fill"
    VerticalOptions="End"/>

    <Frame x:Name="frameGameOver"
    Background="#99000000"
    HorizontalOptions="Fill"
    VerticalOptions="Fill">
    
    <Frame.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnGameOverClicked"/>
    </Frame.GestureRecognizers>

    <Image Source ="inicio.png"/>

    </Frame>



    </Grid>
</ContentPage>
